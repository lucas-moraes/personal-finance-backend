{
"compilerOptions": {
  "target": "ESNext",
  "module": "ESNext",
  "moduleResolution": "Node",
  "esModuleInterop": true,
  "experimentalDecorators": true,
  "strict": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
  "types": ["node", "jest"],
  "baseUrl": "./src",
  "rootDir": "./src",
  "outDir": "./dist",
  "jsx": "react-jsx",
  "jsxImportSource": "hono/jsx",
  "sourceMap": true,
  "inlineSources": true
 },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "api"]
}
